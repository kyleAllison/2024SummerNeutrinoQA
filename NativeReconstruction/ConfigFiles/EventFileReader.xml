<?xml version="1.0" encoding="iso-8859-1"?>

<!-- Configuration of Module EventFileReader -->
<EventFileReader
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:noNamespaceSchemaLocation='[SCHEMAPATH]/EventFileReader.xsd'>

  <ReportFilenames/>

  <!-- the list of filenames (space delimited) -->
  <InputFilenames>
    `ls $INPUTFILE`
  </InputFilenames>

  <!-- default, silent, terse, verbose, annoying -->
  <verbosity> verbose </verbosity>

  <!-- catch exception and return eContinueLoop if true,
       return eFailure otherwise -->
  <continueOnException> 0 </continueOnException>

  <!-- force no unpacking of TPC Pteraw or BOS data -->
  <forceNoTPCRawData> 0 </forceNoTPCRawData>

</EventFileReader>
